{
  "compilerOptions": {
    // English comment: Taro + webpack5 friendly TS config
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["@tarojs/taro", "@tarojs/components", "node"],
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": ["src", "config/index.ts", "unocss.config.ts"],
  "exclude": ["dist", "node_modules"]
}
