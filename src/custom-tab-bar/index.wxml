<!-- English: Minimal custom tabbar, fixed at bottom with explicit height -->
<view class="ctb" style="background: {{backgroundColor}}">
  <view class="ctb__items">
    <block wx:for="{{items}}" wx:key="pagePath">
      <view
        class="ctb__item {{ index === selected ? 'ctb__item--active' : '' }}"
        data-path="{{item.pagePath}}"
        data-index="{{index}}"
        bindtap="switchTab"
      >
        <image
          class="ctb__icon"
          src="{{ index === selected ? item.selectedIconPath : item.iconPath }}"
          lazy-load="true"
          mode="aspectFit"
        />
        <text
          class="ctb__text"
          style="color: {{ index === selected ? selectedColor : color }}"
        >{{item.text}}</text>
      </view>
    </block>
  </view>
  <view class="ctb__safe"></view>
</view>
